version: '3'
services:
  couchdb:
    image: couchdb
    environment:
      - COUCHDB_USER=admin
      - COUCHDB_PASSWORD=admin
    ports:
      - '5984:5984'
      - '4369:4369'
      - '9100-9200:9100-9200'
    volumes:
      - type: bind
        source: /home/ubuntu/couchdb/vm.args
        target: /opt/couchdb/etc/vm.args
      - type: bind
        source: /home/ubuntu/couchdb/docker.ini
        target: /opt/couchdb/etc/local.d/docker.ini
      - type: bind
        source: /home/ubuntu/couchdb/default.ini
        target: /opt/couchdb/etc/default.ini
      - /data:/opt/couchdb/data